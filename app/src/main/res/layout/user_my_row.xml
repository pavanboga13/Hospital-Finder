<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginLeft="50dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:padding="12dp">

            <TextView
                android:id="@+id/my_name"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="Pavan"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/my_blood"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="OPA"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_name" />

            <TextView
                android:id="@+id/my_age"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="20"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_blood" />

            <TextView
                android:id="@+id/my_date"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="01/11/2000"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/my_age"
                tools:layout_editor_absoluteX="-1dp" />

            <TextView
                android:id="@+id/my_time"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:text="10:10"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/my_date"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>