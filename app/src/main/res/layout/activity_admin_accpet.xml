<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_accpet"
    android:layout_marginTop="50dp"
>

    <EditText
        android:id="@+id/bloodgroup2"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Enter Blood Group"
        android:inputType="textPersonName"
        android:textColor="@color/Black" />

    <EditText
        android:id="@+id/name2"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hospital_address2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textColor="@color/Black" />

    <EditText
        android:id="@+id/age2"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bloodgroup2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Enter Age"
        android:inputType="number"
        android:textColor="@color/Black" />

    <Button
        android:id="@+id/Accept_app"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Accept Appointment"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:textColor="@color/Black"
        android:fontFamily="monospace"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/time_for_app"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/Cancel_app"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Cancel Appointment"
        android:textStyle="bold"
        android:background="@color/Red"
        android:textColor="@color/Black"
        android:fontFamily="monospace"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Accept_app"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/date"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Enter Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/time_for_app"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="Enter Time"
        android:inputType="time" />




</RelativeLayout>