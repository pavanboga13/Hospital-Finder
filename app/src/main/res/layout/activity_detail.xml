<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">


    <TextView
        android:id="@+id/show_intent_name"
        android:layout_width="289dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text=""
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="99dp"
        android:src="@drawable/ic_baseline_home_24" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="162dp"
        android:src="@drawable/ic_baseline_location_on_24" />

    <TextView
        android:id="@+id/Show_Address"
        android:layout_width="289dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <Button
        android:id="@+id/go_to_take_apointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Show_Address"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:fontFamily="monospace"
        android:text="Get Appointment"
        android:textSize="25dp" />

    <Button
        android:id="@+id/give_review_to_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go_to_take_apointment"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:text="Give Review"
        android:textSize="25dp" />


</RelativeLayout>